<div class="card panel transparenty" >
  <div class="card-block">
    <div class="portfolio-container">
      <div class="row">
        <div class="col-md-7">
          <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
        </div>
    
        <div class="col-md-5">
          <h1><%= @portfolio_item.title %></h1>
          
          <p>
            <%= @blog.topic.title %>
          </p>
          
          <hr>
    
          <em><%= @portfolio_item.subtitle %></em>
    
          <p><%= @portfolio_item.body %></p>
    
          <hr>
    
          <h3>Technologies Used:</h3>
    
          <% @portfolio_item.technologies.each do |t| %>
          <p><%= t.name %></p>
          <% end %>
          <%= link_to 'Edit', edit_portfolio_path, class: "btn btn-success" %>
          <%= link_to 'Back', :back, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>